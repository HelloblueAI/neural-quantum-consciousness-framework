FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY pnpm-lock.yaml ./

# Install pnpm and dependencies
RUN npm install -g pnpm
RUN pnpm install

# Copy source code
COPY dist/ ./dist/
COPY src/ ./src/

# Expose port
EXPOSE 8080

# Start the Real AGI
CMD ["node", "dist/sentient-web-interface.js"] 